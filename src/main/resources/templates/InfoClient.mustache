<div class="modal modal-sheet position-static d-block" style="background: #6441A5" tabindex="-1" role="dialog" id="modalSheet">
    <div class="modal-dialog" role="document" style="margin-top: 190px; margin-bottom: 190px">
        <div class="modal-content rounded-6 shadow">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title">Данные о клиенте</h5>
            </div>
            {{#InfoClient}}
                <div class="modal-body py-0">
                    <p>Фамилия:{{surname}}</p>
                    <p>Имя:{{name}}</p>
                    <p>Отчество:{{patronymic}}</p>
                    <p>Номер телефона:{{phone_number}}</p>
                    <p>Адрес проживания:{{address}}</p>
                </div>
            {{/InfoClient}}
            <div class="modal-footer flex-column border-top-0">
                <a href="/menu"><button type="button" class="btn btn-lg btn-primary w-100 mx-0 mb-2" style="background-color: #6441A5">Вернуться в меню</button></a>
            </div>
        </div>
    </div>
</div>
